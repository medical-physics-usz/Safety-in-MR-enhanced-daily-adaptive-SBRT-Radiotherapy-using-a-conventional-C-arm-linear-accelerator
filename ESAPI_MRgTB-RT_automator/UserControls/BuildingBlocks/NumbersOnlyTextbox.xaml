<UserControl x:Class="USZ_RtPlanAutomator.UserControls.NumbersOnlyTextbox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:USZ_RtPlanAutomator.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="200">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Label Grid.Column="0" Grid.Row="0" Name="numbersBoxLabel" MinWidth="100"></Label>
        <TextBox Grid.Column="1" Grid.Row="0" MinWidth="30" Name="numbersTextBox" PreviewTextInput="NumberValidationTextBox"></TextBox>
        <Label Grid.Column="2" Grid.Row="0" Name="numbersBoxUnit"></Label>
    </Grid>
</UserControl>
